<?xml version="1.0"?>
<config>
	<tabs>
        <megamenu translate="label">
            <label>Cmsmart Megamenu</label>
            <sort_order>110</sort_order>
        </megamenu>
    </tabs>
    <sections>
        <megamenu translate="label">
			<label>Mega Menu</label>
			<tab>megamenu</tab>
			<frontend_type>text</frontend_type>
			<sort_order>300</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
            <groups>
				<mainmenu translate="label">
                    <label>Main Menu</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_enabledisable</source_model>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </enabled>                    
						<home translate="label">
                            <label>Show Home Link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </home>
                        <home_color translate="label">
                            <label>Color Home</label>
                            <frontend_type>text</frontend_type>
							<frontend_model>megamenu/adminhtml_system_config_form_field_color</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </home_color>
                        <home_background translate="label">
                            <label>Background Home</label>
                            <frontend_type>text</frontend_type>
							<frontend_model>megamenu/adminhtml_system_config_form_field_color</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </home_background>
                        <width_menu translate="label">
                            <label>Width Menu</label>
                            <comment>
								<![CDATA[Ex:950(Width: 950px;)]]>
							</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width_menu>
						<width_thumbnail_category translate="label">
                            <label>Width thumbnail category</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width_thumbnail_category>
                        <height_thumbnail_category translate="label">
                            <label>Height thumbnail category</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </height_thumbnail_category>
                       
                    </fields>    
                </mainmenu>
                <info translate="label">
                        <label>Cmsmart</label>
                        <frontend_type>text</frontend_type> 
                        <sort_order>20</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store> 
